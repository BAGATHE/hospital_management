<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Action -->
        <record id="action_symptom" model="ir.actions.act_window">
            <field name="name">Symptoms</field>
            <field name="res_model">hospital.symptom</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Vue Liste -->
        <record id="view_symptom_list" model="ir.ui.view">
            <field name="name">symptom.list</field>
            <field name="model">hospital.symptom</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire -->
        <record id="view_symptom_form" model="ir.ui.view">
            <field name="name">symptom.form</field>
            <field name="model">hospital.symptom</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
